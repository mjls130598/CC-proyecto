# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# APUNTES

GET     /apunte                                controllers.ApunteController.apuntes(universidad: Option[String], carrera: Option[String], asignatura: Option[String], apunte: Option[String], curso: Option[String])

GET     /asignatura/:idAsignatura              controllers.ApunteController.apuntesAsignatura(idAsignatura)

GET     /apunte/:id                            controllers.ApunteController.apunte(id) 

POST    /apunte                                controllers.ApunteController.addApunte

DELETE  /apunte/:id/                           controllers.ApunteController.deleteApunte(id)

# ASIGNATURA

POST    /asignatura                            controllers.AsignaturaController.addAsignatura

DELETE  /asignatura/:id/:usuario               controllers.AsignaturaController.deleteAsignatura(id, usuario)

# COMENTARIO

GET     /comentario/:idApunte                  controllers.ComentarioController.comentariosApunte(idApunte)

POST    /comentario                            controllers.ComentarioController.addComentario

DELETE  /comentario/:id/:usuario               controllers.ComentarioController.deleteComentario(id, usuario)

# USUARIO

POST    /login                                 controllers.UsuarioController.login

POST    /signup                                controllers.UsuarioController.signup